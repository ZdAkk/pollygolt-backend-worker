{
	"info": {
		"_postman_id": "pollygolt-backend-worker",
		"name": "Pollygolt Backend Worker API",
		"description": "Collection for testing the multilingual AI chat worker endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Conversation Management",
			"item": [
				{
					"name": "Start Conversation",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/conversation/start",
							"host": ["{{base_url}}"],
							"path": ["api", "conversation", "start"]
						},
						"description": "Start a new conversation session"
					},
					"response": []
				},
				{
					"name": "Send Message (Non-streaming)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{session_id}}\",\n  \"message\": \"Hello, how are you?\",\n  \"targetLang\": \"en\",\n  \"temperature\": 0.3,\n  \"maxTokens\": 128\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/conversation/message",
							"host": ["{{base_url}}"],
							"path": ["api", "conversation", "message"]
						},
						"description": "Send a message and get AI response (non-streaming)"
					},
					"response": []
				},
				{
					"name": "Send Message (Streaming)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{session_id}}\",\n  \"message\": \"Tell me a story\",\n  \"targetLang\": \"en\",\n  \"temperature\": 0.7,\n  \"maxTokens\": 256\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/conversation/message/stream",
							"host": ["{{base_url}}"],
							"path": ["api", "conversation", "message", "stream"]
						},
						"description": "Send a message and get streaming AI response"
					},
					"response": []
				}
			],
			"description": "Conversation management and messaging endpoints"
		},
